<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controladores.Actividades.PerfilMensajeroActivity" android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ToolBarStyle"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/view5"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/tvNombre" android:layout_marginTop="16dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDireccion4"
                    android:text="@string/tiempo_laborando"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView22"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="@string/tiempo_laborando"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textSize="@dimen/subtitulos"
                    android:textColor="@color/colorPrimary" android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvCelular"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEdad" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"
                    app:layout_constraintStart_toStartOf="@+id/guiaIzquierda" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" android:text="@string/edad"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="@string/edad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCorreo"
                    app:layout_constraintStart_toStartOf="@+id/guiaIzquierda" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:textSize="@dimen/subtitulos"
                    android:textColor="@color/colorPrimary" android:textStyle="bold"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="@string/ingrese_celular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCelular" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView20"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guiaDerecha"
                                                  android:orientation="vertical" app:layout_constraintGuide_end="16dp"/>
            <TextView
                    android:text="@string/ingrese_celular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20" app:layout_constraintStart_toStartOf="@+id/guideline4"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guiaDerecha" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/view4" app:layout_constraintHorizontal_bias="0.0"
                    android:textColor="@color/colorPrimary" android:textStyle="bold"
                    android:textSize="@dimen/subtitulos"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guideline4"
                                                  app:layout_constraintGuide_begin="0dp"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.5"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guiaIzquierda"
                                                  app:layout_constraintGuide_begin="16dp"
                                                  android:orientation="vertical"/>
            <TextView
                    android:text="correo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCorreo"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView19"
                    app:layout_constraintStart_toStartOf="@+id/guiaIzquierda" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/view4"
                    app:layout_constraintStart_toStartOf="@+id/guiaIzquierda"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:textSize="@dimen/subtitulos" android:textColor="@color/colorPrimary"
                    android:textStyle="bold" app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/view4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/tvVehiculo" android:layout_marginTop="8dp"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="180dp" app:srcCompat="@drawable/ic_launcher_background"
                    android:id="@+id/ivPortada"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="fitCenter"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivFotoCircular"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_centerInParent="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#60000000"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginTop="120dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
            <TextView
                    android:text="Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNombre" android:textSize="20sp"
                    android:textStyle="bold" android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/ivFotoCircular"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
            <TextView
                    android:text="Moto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvVehiculo"
                    app:layout_constraintStart_toStartOf="@+id/guiaIzquierda" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ivVehiculo"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/ic_llamar"
                    android:id="@+id/imageView4"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvVehiculo"
                    app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5"
                    app:layout_constraintStart_toEndOf="@+id/ivVehiculo" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/ic_mensaje_verde"
                    android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvVehiculo"
                    app:layout_constraintEnd_toStartOf="@+id/ivVehiculo" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/ic_motocicleta_negra"
                    android:id="@+id/ivVehiculo" app:layout_constraintTop_toBottomOf="@+id/view5"
                    android:layout_marginTop="16dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guiaDerecha" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guiaIzquierda" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>