<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginLeft="8dp"
                                             android:elevation="4dp"
                                             android:layout_marginRight="8dp" android:layout_marginTop="16dp"
                                             android:background="@color/blanco">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoMensajero"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/error_icon2"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/bordeFoto"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombre" app:layout_constraintStart_toEndOf="@+id/ivFotoMensajero"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/tvDisponible"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Bicicleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvVehiculo" app:layout_constraintStart_toEndOf="@+id/ivFotoMensajero"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/ivVehiculo"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp" app:srcCompat="@drawable/ic_disponible"
            android:id="@+id/ivDisponible" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvDisponible" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDisponible"
            app:layout_constraintStart_toEndOf="@+id/ivFotoMensajero" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/ivDisponible"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/ivDisponible"
            app:layout_constraintBottom_toBottomOf="@+id/ivDisponible" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="12sp"/>
    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp" app:srcCompat="@drawable/ic_bicimensajero_navmenu"
            android:id="@+id/ivVehiculo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/tvVehiculo"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre"/>
</android.support.constraint.ConstraintLayout>